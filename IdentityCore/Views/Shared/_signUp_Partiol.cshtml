@if( User.Identity.Name != null)
{
    <li class="nav-item">

        <a class="nav-link text-dark" asp-area="" asp-controller="Oath" asp-action="signUp">@User.Identity.Name</a>
    </li>
    <li class="nav-item">

        <a class="nav-link text-dark" asp-area="" asp-controller="Oath" asp-action="logout">LogOut</a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Oath" asp-action="signUp">Signup</a>
    </li>
    <li class="nav-item">
       @* asp-rout-returnUrl used for the purpose if you are on specific page and do login then after login you will 
        be redirecte the same page where you where*@
        <a class="nav-link text-dark" asp-area="" asp-controller="Oath" asp-action="login" asp-route-returnUrl="@Context.Request.Path">login</a>
    </li>
}
